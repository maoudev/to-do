---
interface Props {
  title: string;
}

import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Elevate your productivity with seamless task management. Organize, prioritize, and conquer tasks efficiently for professional and personal success."
    />
    <meta
      name="keywords"
      content="task management, productivity,  tasksync, to-do list, organization, efficiency, time management, task tracking, goal setting"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="bg-white dark:bg-black">
    <Header />
    <main>
      <slot />
    </main>
    <style is:global>
      @font-face {
        font-family: "Hyperbola";
        src: "../static/fonts/Hyperbola.woff2";
      }
      html {
        font-family: system-ui, sans-serif;
        background-size: 224px;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
